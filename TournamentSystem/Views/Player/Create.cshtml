                <label asp-for="PlayerUserId" class="control-label"></label>
                <select asp-for="PlayerUserId" class ="form-control" asp-items="ViewBag.PlayerUserId"></select>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

